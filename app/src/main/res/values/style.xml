<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- NEW REDESIGN -->
    <style name="toolbar">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textColor">@color/secondary_dark</item>
        <item name="android:background">@color/primary_light</item>
    </style>

    <style name="button">
        <item name="fontFamily">@font/raleway</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/secondary_light</item>
        <item name="android:backgroundTint">@color/primary_dark</item>
    </style>

    <style name="recycler_item_text">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="drawer_title">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:text">@string/vells</item>
    </style>

    <style name="navigation_items">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>








    <!-- Recycler items background. -->
    <style name="recycler_items_background" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/light_grey</item>
    </style>

    <!-- Recycler items title text. -->
    <style name="recycler_items_title_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_blue</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Recycler items text. -->
    <style name="recycler_items_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_blue</item>
        <item name="fontFamily">@font/raleway</item>
    </style>





    <!-- Background colours. -->
    <style name="background_colour1" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/wine</item>
    </style>

    <style name="background_colour2" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="background_colour3" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name="background_colour4" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="background_colour5" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/light_grey</item>
    </style>

    <!-- Text colours. -->.
    <style name="text_colour1" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/wine</item>
    </style>

    <style name="text_colour2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="text_colour3" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="text_colour4" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="text_colour5" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_grey</item>
    </style>
</resources>