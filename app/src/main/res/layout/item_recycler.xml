<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_100"
        android:layout_margin="@dimen/margin_10"
        app:cardCornerRadius="@dimen/corner_radius_12"
        app:cardElevation="@dimen/card_elevation_8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/secondary_light">

            <TextView
                android:id="@+id/tvTableTitle"
                style="@style/recycler_item_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

            <ImageView
                android:id="@+id/moreIcon"
                android:layout_width="@dimen/more_icon_50"
                android:layout_height="@dimen/more_icon_50"
                android:src="@drawable/more_icon"
                android:layout_marginEnd="@dimen/margin_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>